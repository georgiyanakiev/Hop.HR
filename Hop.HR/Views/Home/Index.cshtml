@{
    ViewBag.Title = "Home Page";
}

    <div class="well">

        <form>

            <div class="form-group">

                <label for="firstName">First Name</label>

                <input class="form-control" type="text" data-bind="value: firstName" />

            </div>

            <div class="form-group">

                <label for="lastName">Last Name</label>

                <input class="form-control" type="text" data-bind="value: lastName" />

            </div>

            <div class="form-group">

                <label for="emailAddress">Email Address</label>

                <input class="form-control" type="text" data-bind="value: emailAddress" />

            </div>

            <div class="form-group">

                <label for="phoneNumber">Phone Number</label>

                <input class="form-control" type="text" data-bind="value: phoneNumber" />

            </div>

            <button class="btn btn-primary" data-bind="click: addNewEmployee">Save</button>

            <button class="btn btn-secondary" data-bind="click: addNewEmployee">Login</button>
            
            <h1 type="text" data-bind="text: login"></h1> 

            <h2 type="text" data-bind></h2>


        </form>

    </div>
@section scripts{
    @Scripts.Render("~/bundles/EmployeeViewModel");

    <script type="text/javascript">
        $(function () {
            var viewModel = new EmployeeViewModel();

            ko.applyBindings(viewModel);
        });
    </script>
    }